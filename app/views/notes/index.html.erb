<div class="container mt-4">
  <h1 class="mb-4">メモ一覧</h1>
  
  <div class="mb-3">
    <%= link_to '新規メモ作成', new_note_path, class: 'btn btn-primary' %>
  </div>

  <div class="list-group">
    <% @notes.each do |note| %>
      <div class="list-group-item">
        <div class="d-flex justify-content-between align-items-center">
          <h5><%= note.title %></h5>
          <div>
            <%= link_to '詳細', note, class: 'btn btn-sm btn-info' %>
            <%= link_to '編集', edit_note_path(note), class: 'btn btn-sm btn-warning' %>
            <%= link_to '削除', note, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
