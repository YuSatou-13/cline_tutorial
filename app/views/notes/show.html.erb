<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2><%= @note.title %></h2>
    </div>
    <div class="card-body">
      <p class="card-text"><%= simple_format(@note.content) %></p>
    </div>
    <div class="card-footer">
      <%= link_to '編集', edit_note_path(@note), class: 'btn btn-warning' %>
      <%= link_to '戻る', notes_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
