<div class="container mt-4">
  <h1 class="mb-4">新規メモ作成</h1>

  <%= form_with(model: @note, local: true) do |form| %>
    <% if @note.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@note.errors.count, "件のエラー") %> があります:</h4>
        <ul>
          <% @note.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, 'タイトル' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :content, '内容' %>
      <%= form.text_area :content, class: 'form-control', rows: 10 %>
    </div>

    <div class="actions">
      <%= form.submit '作成', class: 'btn btn-primary' %>
      <%= link_to 'キャンセル', notes_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
